.investor-news-box-3.news-main-content-box.tab-box
    .row
        .list-categories-box.tabs 
            ul.list-categories.tab-list-categories
                li.item-category.active(rel="panel-1")
                    span.name-category Tin tức kinh doanh
                li.item-category(rel="panel-2")
                    span.name-category Thông tin nhà đầu tư
                li.item-category(rel="panel-3")
                    span.name-category Phát triển bền vững 
            .panel.active#panel-1
                .main-content
                    ul.list-news 
                        -for(i=1; i<6; i++)
                            li.item-news
                                .news-left-box
                                    a(href="")
                                        img(src="./images/news/news" + i + ".png")
                                .news-right-box 
                                    a(href="")
